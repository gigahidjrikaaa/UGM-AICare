# Care Token Dashboard Environment Variables
# Copy this file to .env and fill in your values

# Database
POSTGRES_PASSWORD=care_token_secure_pass_2024
DATABASE_URL=postgresql+asyncpg://care_token_user:care_token_secure_pass_2024@localhost:5433/care_token_dashboard

# Redis
REDIS_URL=redis://localhost:6380/0

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# SOMNIA Blockchain
SOMNIA_RPC_URL=https://rpc.somnia.network
CARE_TOKEN_ADDRESS=0x...
PLATFORM_REVENUE_ORACLE_ADDRESS=0x...
CARE_STAKING_HALAL_ADDRESS=0x...

# Finance Team Wallet (must have FINANCE_TEAM_ROLE on oracle contract)
FINANCE_TEAM_PRIVATE_KEY=0x...

# Scheduler Configuration
ENABLE_MONTHLY_SCHEDULER=true
SCHEDULER_TEST_MODE=false  # Set to true for testing (runs every minute)

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8001/api/v1
VITE_SOMNIA_RPC_URL=https://rpc.somnia.network
VITE_CARE_TOKEN_ADDRESS=0x...
VITE_PLATFORM_REVENUE_ORACLE_ADDRESS=0x...
VITE_CARE_STAKING_HALAL_ADDRESS=0x...
