# Main environment configuration file for the application
# This file contains sensitive information and should not be shared publicly.

# Database
DB_HOST=localhost
DB_NAME=example_db
DB_USER=example 
DB_PASSWORD=example123
DB_PORT=5432
DATABASE_URL=postgresql://example:example123@localhost:5432/example_db

EMAIL_ENCRYPTION_KEY=example_encryption_key

# Redis configuration
REDIS_URL=example.redis.cache.windows.net
REDIS_DB=0
REDIS_PORT=9999
REDIS_USERNAME=example_redis_user
REDIS_PASSWORD=example_redis_password

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_BYPASS_ADMIN=true

# Rate limits for students (per endpoint per time window)
RATE_LIMIT_CHAT_PER_MINUTE_STUDENT=10
RATE_LIMIT_CHAT_PER_HOUR_STUDENT=100
RATE_LIMIT_CHAT_PER_DAY_STUDENT=500

# Rate limits for counsellors
RATE_LIMIT_CHAT_PER_MINUTE_COUNSELLOR=30
RATE_LIMIT_CHAT_PER_HOUR_COUNSELLOR=300
RATE_LIMIT_CHAT_PER_DAY_COUNSELLOR=2000

# Rate limits for analytics endpoints
RATE_LIMIT_ANALYTICS_PER_MINUTE_STUDENT=5
RATE_LIMIT_ANALYTICS_PER_HOUR_STUDENT=30
RATE_LIMIT_ANALYTICS_PER_DAY_STUDENT=100

# Caching Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600           # 1 hour default
CACHE_USER_SUMMARY_TTL=1800      # 30 minutes
CACHE_JOURNAL_TTL=900            # 15 minutes
CACHE_RESOURCE_TTL=86400         # 24 hours
CACHE_CBT_MODULE_TTL=86400       # 24 hours
CACHE_USER_PROFILE_TTL=3600      # 1 hour

# Backend
APP_ENV=production
PORT=8000
FRONTEND_URL=http://example.com
BACKEND_URL=http://example.com/api
JWT_SECRET_KEY=example_nextauth_secret
JWT_EXPIRATION_TIME=3600 # 1 hour
INTERNAL_API_KEY=example_internal_api_key
# Object storage (MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=example_minio_access_key
MINIO_SECRET_KEY=example_minio_secret_key
MINIO_BUCKET=content-resources
MINIO_SECURE=false

# API settings
# n8n Integration
N8N_WEBHOOK_URL=https://example.com/n8n/webhook
N8N_INTERVENTION_WEBHOOK_URL=
N8N_API_KEY=example_n8n_api_key
INTERVENTION_DEFAULT_CTA_URL=https://example.com/appointments

TOGETHER_API_KEY=example_together_api_key
GOOGLE_GENAI_API_KEY=example_google_genai_api_key

# Twitter API configuration
TWITTER_API_KEY=example_twitter_api_key
TWITTER_API_SECRET=example_twitter_api_secret
TWITTER_ACCESS_TOKEN=example_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=example_twitter_access_token_secret
TWITTER_BEARER_TOKEN=example_twitter_bearer_token

# Other settings
ALLOWED_ORIGINS=http://example.com,http://localhost:4000
LOG_LEVEL=INFO

# Web3 (EDUChain Testnet)
NFT_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
EDU_TESTNET_RPC_URL=https://rpc.open-campus-codex.gelato.digital
EDU_CHAIN_TESTNET_CHAIN_ID=656476
BACKEND_MINTER_PRIVATE_KEY=0x

WORKERS_PER_CORE=4 # For Gunicorn

# Frontend (Build-time and potentially runtime)
NEXT_PUBLIC_API_URL=http://example.com/api  # Client-side public URL
INTERNAL_API_URL=http://backend:8000    # Internal URL for server-side (Docker)
NEXTAUTH_URL=http://example.com
NEXTAUTH_SECRET=example_nextauth_secret
GOOGLE_CLIENT_ID=example_google_client_id
GOOGLE_CLIENT_SECRET=example_google_client_secret

# Admin Credentials
ADMIN_EMAIL=example@example.com
ADMIN_PASSWORD=example_admin_password

# Counselor Credentials
COUNSELOR_EMAIL=counselor@example.com
COUNSELOR_PASSWORD=example_counselor_password
COUNSELOR_NAME=Default Counselor

# Common
TZ=Asia/Jakarta # Example timezone

# Development Environment Variables
NEXT_PUBLIC_API_URL_DEV=
NEXTAUTH_URL_DEV=

FRONTEND_URL_DEV=
BACKEND_URL_DEV=

# For development: set to 'true' to enable hardcoded admin@ugm.ac.id login
ALLOW_DEV_CREDENTIALS=false


